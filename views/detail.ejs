<%- include('header'); -%>
<div class="background container-fluid mx-auto border border-warning" style="width : 1000px;">
    <h1>Current Weather conditions in <%= query %> are </h1>
</div>

<div class="background container-fluid mx-auto border border-warning" style="width : 1000px;">
  <div class="row">
    <div class="unit col">
      <h3><%= country %></h3>
    </div>
  </div>
  <div class="row">
    <div class="unit col">
        <h2><%= query %></h2>
    </div>
    <div class="unit col mx-auto" style = "width : auto;">
       <img src="<%= iconUrl %>" alt="weatherImg" class = "icon">
    </div>
  </div>
  <div class="row">
    <div class="unit col">
      <h3><%= temp %> 째C</h3>
    </div>
  <div class="unit col">
    <h3><%= tempMax %> 째C</h3>
  </div>
  <div class="unit col">
      <h3><%= tempMin %> 째C</h3>
  </div>
  </div>
  <div class="row">
    <div class="unit col">
      <h3><%= humidity %>%</h3>
    </div>
    <div class="unit col">
      <h3><%= feelsLike %> 째C</h3>
    </div>

    <div class="unit col">
      <h3><%= weatherDescription %> </h3>
    </div>
  </div>



</div>

<%- include('footer'); -%>
